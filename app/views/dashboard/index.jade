extends ../layouts/default

block content
  .row
    .twelve.columns
      nav.top-bar
        ul
          li.name 
            h1 
              a(href="#") Dashboard
        section
          ul.right
            li.divider
            li 
              a(href="#") Logout          

  .row
    .three.columns
      .panel
        h5 Profiles
        button.button.small.alert.bottom-margin(id="form-add") Add new profile
        dl.vertical.tabs
          dd
            a(href="#") Record 1
          dd
            a(href="#") Record 2

    .nine.columns
      .row
        .twelve.columns#form-area
          form(method="post", action="/data/store")
            fieldset.no-top-margin 
             .row
               .four.mobile-one.columns
                 label.left.inline Social security number
               .eight.mobile-one.columns
                 input#ssn(type='text', name="ssn", placeholder='Social security number')

             .row
               .four.mobile-one.columns
                 label.left.inline Phone number
               .eight.mobile-one.columns
                 input#phone(type='text', name="phone", placeholder='Phone')

             .row
               .four.mobile-one.columns
                 label.left.inline Master key
               .eight.mobile-one.columns
                 input#master-sub(type='text', name="master", placeholder='Master key')

            .row
              .twelve.mobile-one.columns
               input(type='hidden', name='_csrf', value=token)
               button.button(type='submit') Submit

      .row
        .twelve.columns#form-retrieve
          form(method="post", action="/data/retrieve")
            .row
              .four.mobile-one.columns
                label.left.inline Master key
              .eight.mobile-one.columns
                input#master-retr(type='text', name='master', placeholder='Master key')
            .row
              .twelve.mobile-one.columns
                input(type='hidden', name='_csrf', value=token)
                button.button(type='submit') Submit
  

  
